<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDECCA"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:gravity="center"
        android:src="@drawable/logo"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012" />

    <!--베팅받는 레이아웃-->

        <ImageView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="1020px"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:src="@drawable/game_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/elicedigitalbaeum_bold"
            android:gravity="center"
            android:text="승,패,무 중 하나에 베팅하세요."
            android:textColor="@color/black"
            android:textSize="70px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:layout_width="350px"
            android:layout_height="150px"
            android:background="@drawable/token7"
            android:fontFamily="@font/elicedigitalbaeum_bold"
            android:gravity="center"
            android:text="10000"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="270px"
                android:layout_height="210px"
                android:layout_marginEnd="30dp"
                android:src="@drawable/win" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="270px"
                android:layout_height="210px"
                android:src="@drawable/draw" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="270px"
                android:layout_height="210px"
                android:layout_marginStart="30dp"
                android:src="@drawable/lose" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <!--이미지 버튼으로 변경 or 버튼 스타일로 둥글게 하기 둘 중 선택 예정-->
        <Button
            android:id="@+id/win_bt"
            android:layout_width="280px"
            android:layout_height="100px"
            android:layout_marginEnd="25dp"
            android:background="@drawable/button_custom"
            android:fontFamily="@font/elicedigitalbaeum_bold"
            android:stateListAnimator="@null"
            android:text="베팅"
            android:textColor="#272727"
            android:textSize="50px" />

        <Button
            android:id="@+id/draw_bt"
            android:layout_width="280px"
            android:layout_height="100px"
            android:background="@drawable/button_custom"
            android:fontFamily="@font/elicedigitalbaeum_bold"
            android:stateListAnimator="@null"
            android:text="베팅"
            android:textColor="#272727"
            android:textSize="50px"/>

        <Button
            android:id="@+id/lose_bt"
            android:layout_width="280px"
            android:layout_height="100px"
            android:layout_marginStart="25dp"
            android:background="@drawable/button_custom"
            android:fontFamily="@font/elicedigitalbaeum_bold"
            android:stateListAnimator="@null"
            android:text="베팅"
            android:textColor="#272727"
            android:textSize="50px"/>
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
<!--숨겨져 있는 베팅 받는 창-->
    <LinearLayout
        android:id="@+id/win_layout"
        android:layout_width="900px"
        android:layout_height="wrap_content"
        android:background="#DDECCA"
        android:layout_marginTop="400px"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">
<!--        android:visibility="invisible"-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="승리"
            android:gravity="center"
            android:textSize="100px"
            android:textColor="@color/black"
            android:fontFamily="@font/one_mobile_pop"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/one_mobile_pop"
                android:gravity="center"
                android:text="보유토큰:"
                android:textColor="@color/black"
                android:textSize="50px" />
        <TextView
            android:layout_width="350px"
            android:layout_height="150px"
            android:background="@drawable/token7"
            android:fontFamily="@font/elicedigitalbaeum_bold"
            android:gravity="center"
            android:text="10000"
            android:textColor="@color/black"
            android:textSize="39px" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="베팅:"
                android:textSize="50px"
                android:fontFamily="@font/one_mobile_pop"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_width="350px"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:fontFamily="@font/one_mobile_pop"
                android:textSize="40px"
                android:hint="베팅할 금액 입력"
                android:maxLength="5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100px"
            >
            <Button
                android:layout_width="190px"
                android:layout_height="82px"
                android:background="@drawable/button_custom"
                android:fontFamily="@font/elicedigitalbaeum_bold"
                android:stateListAnimator="@null"
                android:text="취소"
                android:textColor="#272727"
                android:textSize="40px"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <Button
                android:layout_width="190px"
                android:layout_height="82px"
                android:background="@drawable/button_custom"
                android:fontFamily="@font/elicedigitalbaeum_bold"
                android:stateListAnimator="@null"
                android:text="확인"
                android:textColor="#272727"
                android:textSize="40px" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>